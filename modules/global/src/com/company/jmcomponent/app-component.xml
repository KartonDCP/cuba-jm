<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">
    <module blocks="*"
            name="global">
        <artifact appJar="true"
                  name="jmc-global"/>
        <property name="cuba.persistenceConfig"
                  value="+com/company/jmcomponent/persistence.xml"/>
        <property name="cuba.metadataConfig"
                  value="+com/company/jmcomponent/metadata.xml"/>
        <property name="cuba.viewsConfig"
                  value="+com/company/jmcomponent/views.xml"/>
    </module>
    <module blocks="core"
            dependsOn="global,javamelody"
            name="core">
        <artifact appJar="true"
                  name="jmc-core"/>
        <property name="cuba.springContextConfig"
                  value="+com/company/jmcomponent/spring.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+com.company.jmcomponent.core"/>
        <artifact classifier="db"
                  configuration="dbscripts"
                  ext="zip"
                  name="jmc-core"/>
    </module>
    <module blocks="web,desktop"
            dependsOn="global"
            name="gui">
        <artifact appJar="true"
                  name="jmc-gui"/>
    </module>
    <module blocks="web"
            dependsOn="gui,javamelody"
            name="web">
        <artifact appJar="true"
                  name="jmc-web"/>
        <artifact classifier="web"
                  configuration="webcontent"
                  ext="zip"
                  name="jmc-web"/>
        <property name="cuba.springContextConfig"
                  value="+com/company/jmcomponent/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/company/jmcomponent/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig"
                  value="+com/company/jmcomponent/web-screens.xml"/>
        <property name="cuba.menuConfig"
                  value="+com/company/jmcomponent/web-menu.xml"/>
        <property name="cuba.permissionConfig"
                  value="+com/company/jmcomponent/web-permissions.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+com.company.jmcomponent.web"/>
    </module>
    <module name="javamelody" dependsOn="global" blocks="web,desktop">
        <artifact name="jmc-javamelody"
                  appJar="true"/>
        <property name="jmc.authorizedUserCredentials" value="admin:admin"/>
    </module>
</app-component>
